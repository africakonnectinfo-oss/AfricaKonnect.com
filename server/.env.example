# ============================================
# SERVER CONFIGURATION
# ============================================

# Server Port
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION (PostgreSQL/Supabase)
# ============================================

# Database Host (e.g., db.xxxxx.supabase.co)
DB_HOST=your-db-host

# Database Port (default PostgreSQL port)
DB_PORT=5432

# Database Name
DB_NAME=your-db-name

# Database User
DB_USER=your-db-user

# Database Password
DB_PASSWORD=your-db-password

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Secret Key (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# JWT Expiration (e.g., 7d, 24h, 30m)
JWT_EXPIRES_IN=7d

# ============================================
# CORS CONFIGURATION
# ============================================

# Frontend URL(s) for CORS
# For local development: http://localhost:5173
# For production: https://your-app.pages.dev
CLIENT_URL=http://localhost:5173

# Multiple origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:5173,https://your-app.pages.dev

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# Email Service Provider
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Email From Address
# EMAIL_FROM=noreply@africakonnect.com

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Maximum file upload size (in bytes)
# 10MB = 10485760
MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# ============================================
# RATE LIMITING
# ============================================

# API Rate Limit (requests per window)
RATE_LIMIT_MAX=100

# Rate Limit Window (in minutes)
RATE_LIMIT_WINDOW=15

# ============================================
# PRODUCTION SETTINGS
# ============================================

# Set to 'true' in production to enable additional security
# TRUST_PROXY=true

# Session Secret (for session-based auth if needed)
# SESSION_SECRET=your-session-secret

# ============================================
# OPTIONAL: THIRD-PARTY SERVICES
# ============================================

# Whereby API Key (for video conferencing)
# WHEREBY_API_KEY=your-whereby-api-key

# Payment Gateway Keys (if implementing payments)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
